{{define "pwd.tmpl"}}
    <!DOCTYPE HTML>
    <html lang="en">
    <head>
        <title>密码管理</title>
        <style>
            .slider input {
                display: none;
            }
            .slider-handle {
                width: 20px;
                height: 20px;
                color: #3590ea;
                text-align: center;
                line-height: 20px;
                cursor: pointer;
            }
            .slider-handle:before {
                content: "显示密码";
            }
        </style>
    </head>
    {{template "base" .}}

    <body>
    <form style="margin-top: 25px; margin-left: 10px;" action="/pwd/cfg" method="post">
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-1 col-form-label">服务名</label>
            <div class="col-sm-10">
                <input style="width: 50%" type="text" class="form-control" id="svcName" name="svcName">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-1 col-form-label">登录用户</label>
            <div class="col-sm-10">
                <input style="width: 50%" type="text" class="form-control" id="loginName" name="loginName">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-1 col-form-label">登录密码</label>
            <div class="col-sm-10">
                <label>
                    <input type="checkbox" id="showPassword">
                    <span class="slider-handle"></span>
                </label>
                <input type="password" style="width: 50%" class="form-control" id="loginPwd" name="loginPwd">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-1 col-form-label">备注</label>
            <div class="col-sm-10">
                <textarea style="width: 50%" class="form-control" id="notes" name="pwdNotes" rows="2"></textarea>
            </div>
        </div>

        <div class="form-group" style="margin-top: 35px">
            <button type="submit" class="btn btn-info">保存</button>
            <a href="/pwd/list">
                <button type="button" class="btn btn-info">查询密码</button>
            </a>
            <input style="color: white" class="btn btn-warning" type="reset" value="重置">
        </div>
    </form>

    <script>
        document.getElementById('showPassword').addEventListener('change', function(e) {
            var loginPwd = document.getElementById('loginPwd');
            if (e.target.checked) {
                loginPwd.type = 'text';
            } else {
                loginPwd.type = 'password';
            }
        });
    </script>
    </body>

    </html>
{{end}}